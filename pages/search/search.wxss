.container {
  display: flex;
  height: 100vh;
  background-color: rgb(176, 220, 213);
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

.search-area {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 60rpx;
  padding: 1rpx;
  width: 90%;
  background-color: white;
  border-radius: 10px;
}

.search-input {
  height: 100%;
  display: flex;
  border-radius: 10px;
  justify-content: center;
  text-align: center;
  flex-grow: 1;
  background-color: #ffffff;
  color: #000;
}

.search-icon {
  width: 50rpx;
  margin: 10rpx;
}

.search-result {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: left;
  margin: auto 0;
}

.music-box {
  display: flex;
  flex-direction: row;
  margin: 20rpx 20rpx;
  height: 100rpx;
  background-color: white;
  border-radius: 10px;
}

.music-pic {
  display: flex;
  height: 50rpx;
  width: 50rpx;
  background-color: rgb(104, 152, 134);
  padding: 20rpx;
  border-radius: 50%;
  margin: auto 5px;
  
}

.music-box>.song {
  font-size: 14px;
  line-height: 100rpx;
}

.music-box>.singer {
  display: flex;
  line-height: 100rpx;
  margin-left: 30rpx;
  word-wrap: break-word;
  
}