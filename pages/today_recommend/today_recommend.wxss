.container {
  display: flex;
  display: flex;
  flex-direction: column;
}

.top_logo_tip{
  height: 22vh;
}

.top_logo {
  background-color: rgb(176, 220, 213);
  position: fixed;
  top: 0;
  width: 100%;
  height: 60px;
  z-index: 3;
}

.logo {
  height: 20vh;
  background-image: linear-gradient(rgb(104, 152, 134)2vh, rgb(226, 235, 179)12vh, rgb(176, 220, 213)30vh);
  width: 20vh;
  font-size: 26px;
  display: flex;
  font-family: YouYuan;
  font-weight: bolder;
  border-radius: 50%;
  justify-content: center;
  margin: 0 auto;
}

.logo>text {
  width: 15vh;
  color: white;
  text-align: center;
  margin-top: 4vh;
}

.today_commendation{
  display: flex;
  flex-direction: column;
}

.today_commendation>.box{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 5px 0;
  border-bottom: 1px solid hsl(0, 0%, 74%);
}

.box>image{
  display: flex;
  width: 40px;
  height: 40px;
  margin: 5px 10px ;
}

.box>text{
  height: 42px;
  width: 80%;
  line-height: 40px;
  overflow: hidden;
  word-wrap: break-word;
  text-overflow: ellipsis;
}

.turntomine{
  height: 80px;
  margin:20px auto;
}

.turntomine>text{
  height: 20px;
  width: 70px;
  font-size: 18px;
  background-color:rgb(226, 235, 179) ;
  padding: 10px;
  border-radius: 10px;
}