.container {
  display: flex;
  height: 100vh;
  background-color: rgb(176, 220, 213);
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

input{
  font-size: 16px;
  font-weight: normal;
  border: white 1px solid;
  background-color: white;
  border-radius: 10px;
}

button{
  margin-top: 100rpx;
  background-color: rgb(226, 235, 179);
  color: rgb(104, 152, 134);
}

.box {
  display: flex;
  flex-direction: row;
  color: rgb(104, 152, 134);
  font-size: 18px;
  font-family:微软雅黑;
  font-weight: bold;
  margin: 40rpx auto;
}

radio-group{
  display: flex;
  flex-direction: row;
  align-items: center;
}