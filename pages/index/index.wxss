.container {
  display: flex;
  height: 100vh;
  background-color: rgb(176, 220, 213);
  display: flex;
  flex-direction: column;
}

.logo {
  height: 30vh;
  background-image: linear-gradient(rgb(104, 152, 134)4vh, rgb(226, 235, 179)15vh, rgb(176, 220, 213)22vh);
  width: 30vh;
  font-size: 30px;
  display: flex;
  font-family: YouYuan;
  font-weight: bolder;
  border-radius: 50%;
  justify-content: center;
  margin: 20% auto 0;
}

text {
  height: 15vh;
  width: 15vh;
  color: white;
  text-align: center;
  margin-top: 6vh;
}

.login {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  
}

.partoflogin {
  display: flex;
  flex-direction: row;
  color: rgb(104, 152, 134);
  font-size: 18px;
  font-family:微软雅黑;
  font-weight: bold;
  margin: 40rpx auto;
}

input{
  font-size: 16px;
  font-weight: normal;
  border: white 1px solid;
  background-color: white;
  border-radius: 10px;
}

button{
  margin-top: 100rpx;
  background-color: rgb(226, 235, 179);
  color: rgb(104, 152, 134);
}

.bottle{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  margin-top: 30px;
}

.bottle>view{
  color: rgb(104, 152, 134);
}
 

